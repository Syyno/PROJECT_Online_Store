@using MyProjectOnlineShop.Data.Entities
@using MyProjectOnlineShop.Services
@{
    int cartItems = 0;
    Cart cart = Context.Session.Get<Cart>("cart");
    if (cart != null)
    {
        if (cart.CartItems != null)
        {
            cartItems = cart.CartItems.Count;
        }
    }
}
<header class="header-area clearfix">
    <!-- Close Icon -->
    <div class="nav-close">
        <i class="fa fa-close" aria-hidden="true"></i>
    </div>
    <!-- Logo -->
    <div class="logo">
        <a asp-area="" asp-action="Index" asp-controller="Home"><img src="/img/core-img/logo.png" alt=""></a>
    </div>
    <!-- Amado Nav -->
    <nav class="amado-nav">
        <ul>
            <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a  asp-area="Admin" asp-action="Index" asp-controller="Home">Admin Panel</a></li>
            <li><a asp-action="Cart" asp-controller="Shop" >Cart</a></li>
        </ul>
    </nav>
    <!-- Cart Menu -->
    <div class="cart-fav-search mb-100">
        <a asp-action="Cart" asp-controller="Shop" class="cart-nav"><img src="/img/core-img/cart.png" alt=""> Cart <span>(@cartItems)</span></a>
        <a href="#" class="search-nav"><img src="/img/core-img/search.png" alt=""> Search</a>
    </div>
</header>